    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    
    <script>

        let roomId = `@Model.RoomId`;
        let playerTurn = true;

        function getPlayerTurn() {
            return playerTurn;
        }

        function setPlayerTurn(status) {
            playerTurn = status;
        }

        const hubConnection = new signalR.HubConnectionBuilder()
            .withUrl("/game")
            .build();


        function setShips(shipData, isEnemy) {
            shipData.forEach(ship => {
                ship.coords.forEach(coord => {
                    var selectedCell = getCell(coord.x, coord.y, isEnemy);
                    selectedCell.style.backgroundColor = "#6E6E6E";
                });
            });
        }

        function enemyMove() { 
            setTimeout(function () {
                hubConnection.invoke("EnemyMove", roomId); 
            }, 1000);
        }


        function getCell(colIndex, rowIndex, isEnemy) {
            var tableClass = isEnemy ? '.enemyBoard' : '.playerField';
            return document.querySelector(`${tableClass} [data-row="${rowIndex}"][data-col="${colIndex}"]`);
        }

        function playerMove(colCoord, rowCoord) { 

            hubConnection.invoke("PlayerMove", roomId, parseInt(colCoord), parseInt(rowCoord)); 
        }


        hubConnection.start()
        .then(function () {
            console.log("connected roomId: " + roomId);

            hubConnection.invoke("ConnectUser", roomId);

            setShips(playerShipsData, false);

            hubConnection.on("SetClientPoint", function (isHit, hitPoint, borderPoints) { 

                let selectedCell = getCell(hitPoint.x, hitPoint.y, true); 

                if (isHit) {
                        selectedCell.style.backgroundImage = "url('/images/hit-point.png')";
                }
                else {
                        selectedCell.style.backgroundImage = "url('/images/miss-point.png')";
                        rotateArrow(true);
                    setPlayerTurn(false);
                    }
                    selectedCell.classList.add('occupied');

                borderPoints.forEach(function (point) { 
                    selectedCell = getCell(point.x, point.y, true);

                        selectedCell.style.backgroundImage = "url('/images/miss-point.png')";
                    selectedCell.classList.add('occupied');
                });

                if (!getPlayerTurn())
                {
                    enemyMove(); 
                }
            });

            hubConnection.on("SetEnemyPoint", function (isHit, hitPoint, borderPoints) { 

                let selectedCell = getCell(hitPoint.x, hitPoint.y, false);
                    selectedCell.classList.add('occupied');

                    if (isHit) {
                        selectedCell.style.backgroundImage = "url('/images/hit-point.png')";
                }
                    else {
                        selectedCell.style.backgroundImage = "url('/images/miss-point.png')";
                    setPlayerTurn(true);
                    rotateArrow(false);
                    }
                    
                borderPoints.forEach(function (point) {
                        selectedCell = getCell(point.x, point.y, false);
                        selectedCell.style.backgroundImage = "url('/images/miss-point.png')";
                        selectedCell.classList.add('occupied');
                });

                if (!getPlayerTurn())
                {
                    enemyMove();
                }
            });

            hubConnection.on("GameOver", function (isPlayerWon) {

                console.log("removed");
                playGroundEnemy.removeEventListener('click', handleClickEvent);

                    const winnerField = document.querySelector('.winner')

                let winMessageDiv = document.getElementById("winMessage");

                let winMessageElement = document.createElement("p");

                if (isPlayerWon) {
                    winMessageElement.textContent = "Player WON!";
                }
                else
                {
                    winMessageElement.textContent = "Enemy WON!";
                }

                if (winMessageDiv.firstChild) {
                    winMessageDiv.removeChild(winMessageDiv.firstChild);
                }

               winMessageDiv.appendChild(winMessageElement);
            });
        })
        .catch(function (err) {
            console.error(err.toString());
        });


